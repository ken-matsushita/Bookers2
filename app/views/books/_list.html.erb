<div>
<h1>User info</h1>
<%= image_tag @book.user.get_profile_image(100,100) %>
<table class="table table-striped">
<thead>
  <tr>
    <th>name</th>
    <th>introduction</th>
  </tr>
</thead>
<tbody>
  <tr>
<td><%= @book.user.name %></td>
<td><%= @book.user.introduction %></td>
  </tr>
</tbody>
</table>
<%= link_to edit_user_path(@book.user.id), class: "btn btn-outline-secondary" do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>
</div>

<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div><%= f.submit 'Create Book' %></div>
<% end %>
